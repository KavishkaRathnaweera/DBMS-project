<%-include('_header') %>
    <div>
        
        <div class="container-fluid">
            <div class="row">
                <div class="col-11 m-auto">
                    <div class="row" style="margin-top: 159px;">
                        <% if(erorr) {%>
                            <div class="col-9 m-auto">
                                <div class="alert alert-danger" role="alert">
                                   <%=erorr%>
                                  </div>
                            </div>
                        <%} %>
                        <% if(success) {%>
                            <div class="col-9 m-auto">
                                <div class="alert alert-success" role="alert">
                                   <%=success%>
                                  </div>
                            </div>
                        <%} %>
                        <div class="col-5 m-auto mb-5" style="padding: 40px;background-color: #f2f2f2;">
                            <h1 class="text-center" style="color: rgb(134,192,251);">LOGIN</h1>
                            <form method="POST" action="/login">
                                <div class="form-group" style="margin-top: 40px;"><input class="form-control" type="text" name="id" placeholder="EMP ID"></div>
                                <div class="form-group" style="margin-top: 30px;"><input class="form-control" type="password" name="password" placeholder="Password"></div>
                                <div class="form-group" style="margin-top: 30px;"><button class="btn btn-primary" type="submit">Button</button></div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%-include('_footer') %>



